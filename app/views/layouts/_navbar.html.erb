<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="#">Schlafblogmanager</a>
      <ul class="nav pull-left">
        <%=raw params[:controller] == "events" ? "<li class='active'>" : "<li>" %>
            <%= link_to users_path do%>
              <i class="icon-user icon-large"></i> User <%#  link_to "User", users_path %>
            <%end%>
        </li>
      </ul>
      <ul class="nav pull-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">

            <% if user_signed_in? %>
                <%=  if_user_has_a_name(current_user) %>

                <% else %>
            Gast
                <%end%>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li>
              <% if current_user %>
              <%=  link_to edit_user_path(current_user.id) do %>

              <i class="icon-cog"></i> Einstellungen
                  <%end%>
                  <% end %>
            </li>
            <li>
                <%if current_user%>
                    <%= link_to signout_path do %>
                        <i class="icon-off"></i> Ausloggen
                    <% end %>
                  <%else%>
                    <%= link_to "/auth/cas" do %>
                        <i class="icon-on"></i> Einloggen
                  <%end%>
                <%end%>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
