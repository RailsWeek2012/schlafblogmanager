<h1><%=@schlafposts.first.user.uid%>'s Schlafblog</h1>
<!-- Todo hier muss noch die Formatierung angepasst werden -->


<% @temp %>
    <% @schlafposts.each do |schlafpost| %>
    <% unless @temp==schlafpost.date%>
    <h3> <%=schlafpost.date.strftime("%d.%m.%y")%></h3>
        <% @temp = schlafpost.date %>
        <%end%>
    <table class="table-bordered table-striped table-condensed">

      <thread>
        <tr>
            <td><b><%=schlafpost.title%></b>
             <%=schlafpost.anfang.strftime("%H:%M")%>
            - <%=schlafpost.ende.strftime("%H:%M")%></td>
        </tr>
      </thread>
      <tbody>
        <tr>
          <td> <%=  schlafpost.description %></td>
          <td> <%=  schlafpost.dream %></td>

    <% if current_user == schlafpost.user %>
    <td><%= link_to 'Edit', edit_schlafpost_path(schlafpost) %></td>
    <td><%= link_to 'Destroy', schlafpost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <%end%>
        </tr>
      </tbody>
    </table>
<% end %>

<br />

<%= link_to 'New Schlafpost', new_schlafpost_path %>
