<div class="page-header">
  <h2>Blogs<small> einfach verwalten</small></h2>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thread>
    <tr>
      <th>Name</th>
    </tr>
  </thread>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <% if user.name%>
        <%= user.name %>
            <% else %>
        <%= user.uid %>
            <%end%>
      </td>

      <td>
        <%=  link_to 'Show', schlafposts_index_path(user.id), :class => "btn btn-mini btn-info" %>
      </td>
    </tr>
      <% end %>
  </tbody>
</table>

<%=  link_to 'neuer Schlafblog', new_schlafpost_path, :class => "btn btn-mini btn-success" %>
